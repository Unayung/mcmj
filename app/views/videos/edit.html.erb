<div class="col-md-12 col-sm-12">
  <h1>修改音樂錄影帶內容</h1>
  <h2><%= @video.title %></h2>
  <%= simple_form_for @video do |f| %>
    <%= f.input(:title, :label => "標題") %>
    <%= f.input(:author, :label => "作者") %>
    <%= f.input(:url, :label => "作者網站") %>
    <%= f.input(:note, :label => "備註") %>
    <%= f.input(:iframe_code, :as => :text, :label => "貼上 youtube 的嵌入代碼 <iframe xxxxx></iframe") %>
    <%= f.input(:recommendation, :label => "本日推薦?") %>
    <%= f.submit %>
  <% end %>
</div>