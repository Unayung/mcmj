<div class="group mj-hero" id="hero-0111">
  <div class="column left-column">
    <%= image_tag("/images/hero_0111/img_title.png", :class => "hero-title", :alt => "MC 美江 最新合輯《斷他魂結》 in stores soon") %>
  </div>
  <div class="column right-column">
    <div class="youtube">
      <iframe width="640" height="360" src="//www.youtube-nocookie.com/embed/GdwiJ2BCxlQ?rel=0" frameborder="0" allowfullscreen></iframe>
    </div>
    <%= image_tag("/images/hero_0111/img_cds.png", :class => "hero-cds", :alt => "《斷他魂結》將推出 CD+Blu-ray 及 CD only 兩種版本") %>
  </div>
</div>

<div class="col-xs-12 visible-xs">
  <h2>本日主打  <small><%= Date.today %></small></h2>
</div>

<div class="clearfix mj-hero-videos">
  <% @videos.each do |video| %>
    <div class="col-xs-6 col-md-4 video">
      <%= video.iframe_code.html_safe %>

      <p class="text-center">
        <%= render_video_author_link(video) %>

        <% if current_user.present? && current_user.admin? %>
          <%= link_to("EDIT", edit_video_path(video), :target => :blank, :class => "btn btn-xs btn-warning") %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<%# render :partial => "common/changelog" %>

<div class="col-xs-12 text-center">
  <%= link_to("我還要看更多影音", videos_path, :class => "btn btn-lg btn-primary") %>
</div>

<%= content_for :javascripts do %>
<script type="text/javascript">
(function() {
  var resizeVideo = function(event) {
    var $videos = $("iframe[src^='//www.youtube']");

    $videos.each(function(index,video) {
      $(video).height($(video).width() * 9 / 16);
    });
  }

  $(window).on('resize', resizeVideo).resize();
})();
</script>
<% end %>