  <%= link_to("EDIT", edit_video_path(video), :target => :blank, :class => "btn btn-warning") %>
  <% end %>
  <p><%= render_video_author_link(video) %></p>
  <%= video.iframe_code.html_safe %>
</div>
<% end %>

